{
    "name": "sealed-vote-server",
    "version": "0.0.1",
    "description": "sealed-vote-server",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Tenemo/sealed-vote-server.git"
    },
    "author": "Piotr Piech <piotr@piech.dev>",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://github.com/Tenemo/sealed-vote-server/issues"
    },
    "homepage": "https://github.com/Tenemo/sealed-vote-server#readme",
    "scripts": {
        "start": "node dist/server.js",
        "prebuild": "npm run lint && npm run tsc && npm test && npm run cleanDist",
        "build": "cross-env NODE_ENV=production babel --extensions '.ts' src --out-dir dist",
        "build:skip": "npm run cleanDist && cross-env NODE_ENV=production babel --extensions '.ts' src --out-dir dist",
        "cleanDist": "rimraf ./dist && mkdir dist",
        "dev": "ts-node --transpile-only src/server.ts",
        "docker:up": "docker compose up -d",
        "docker:destroy": "docker compose down -v",
        "docker:refresh": "npm run docker:destroy && npm run docker:up",
        "deploy": "git push heroku master",
        "nodemon": "nodemon",
        "lint": "eslint . --ext js,ts",
        "lint:fix": "eslint . --ext js,ts --fix",
        "postinstall": "husky install",
        "tsc": "tsc",
        "test": "cross-env NODE_ENV=test jest --passWithNoTests",
        "test:coverage": "npm run test -- --coverage",
        "test:watch": "npm run test -- --watch"
    },
    "engines": {
        "node": ">=13.3"
    },
    "dependencies": {
        "@nearform/sql": "^1.10.5",
        "@sinclair/typebox": "^0.32.20",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "env-schema": "^4.2.0",
        "fastify": "^3.29.5",
        "fastify-postgres": "^3.6.0",
        "fluent-json-schema": "^3.1.0",
        "gmean": "^1.0.7",
        "http-errors": "^2.0.0",
        "pino-pretty": "^7.6.1",
        "rimraf": "^3.0.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.24.1",
        "@babel/core": "^7.24.3",
        "@babel/node": "^7.23.9",
        "@babel/preset-env": "^7.24.3",
        "@babel/preset-typescript": "^7.24.1",
        "@types/eslint": "^8.56.7",
        "@types/eslint-plugin-prettier": "^3.1.3",
        "@types/http-errors": "^1.8.2",
        "@types/jest": "^27.5.2",
        "@types/node": "^17.0.45",
        "@types/npm": "^7.19.3",
        "@types/pg": "^8.11.4",
        "@types/prettier": "^2.7.3",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "babel-jest": "^27.5.1",
        "babel-plugin-module-resolver": "^4.1.0",
        "core-js": "^3.36.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-import-resolver-babel-module": "^5.3.2",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest": "^26.9.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-security": "^2.1.1",
        "eslint-plugin-sql": "^2.5.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-cli": "^27.5.1",
        "nodemon": "^2.0.22",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^3.15.0",
        "typescript": "^4.9.5"
    }
}
