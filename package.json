{
    "name": "sealed-vote-server",
    "version": "0.0.1",
    "description": "sealed-vote-server",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Tenemo/sealed-vote-server.git"
    },
    "author": "Piotr Piech <piotr@piech.dev>",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://github.com/Tenemo/sealed-vote-server/issues"
    },
    "homepage": "https://github.com/Tenemo/sealed-vote-server#readme",
    "scripts": {
        "start": "node dist/server.js",
        "prebuild": "npm run lint && npm run tsc && npm test && npm run cleanDist",
        "build": "cross-env NODE_ENV=production babel --extensions '.ts' src --out-dir dist",
        "build:skip": "npm run cleanDist && cross-env NODE_ENV=production babel --extensions '.ts' src --out-dir dist",
        "cleanDist": "rimraf ./dist && mkdir dist",
        "dev": "ts-node --transpile-only src/server.ts",
        "docker:up": "docker compose up -d",
        "docker:destroy": "docker compose down -v",
        "docker:refresh": "npm run docker:destroy && npm run docker:up",
        "deploy": "git push heroku master",
        "nodemon": "nodemon",
        "lint": "eslint . --ext js,ts",
        "lint:fix": "eslint . --ext js,ts --fix",
        "postinstall": "husky install",
        "tsc": "tsc",
        "test": "cross-env NODE_ENV=test jest --passWithNoTests",
        "test:coverage": "npm run test -- --coverage",
        "test:watch": "npm run test -- --watch"
    },
    "engines": {
        "node": ">=13.3"
    },
    "dependencies": {
        "@nearform/sql": "^1.9.2",
        "@sinclair/typebox": "^0.23.4",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.0",
        "env-schema": "^4.0.0",
        "fastify": "^3.28.0",
        "fastify-postgres": "^3.6.0",
        "fluent-json-schema": "^3.1.0",
        "gmean": "^1.0.7",
        "http-errors": "^2.0.0",
        "pino-pretty": "^7.6.1",
        "rimraf": "^3.0.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.9",
        "@babel/node": "^7.16.8",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-typescript": "^7.16.7",
        "@types/eslint": "^8.4.1",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/http-errors": "^1.8.2",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.25",
        "@types/npm": "^7.19.0",
        "@types/pg": "^8.6.5",
        "@types/prettier": "^2.6.0",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "babel-jest": "^27.5.1",
        "babel-plugin-module-resolver": "^4.1.0",
        "core-js": "^3.22.1",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-babel-module": "^5.3.1",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.1.4",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-sql": "^2.1.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-cli": "^27.5.1",
        "nodemon": "^2.0.15",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^3.14.1",
        "typescript": "^4.6.3"
    }
}
