{
    "name": "sealed-vote-server",
    "version": "0.0.1",
    "description": "sealed-vote-server",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Tenemo/sealed-vote-server.git"
    },
    "author": "Piotr Piech <piotr@piech.dev>",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://github.com/Tenemo/sealed-vote-server/issues"
    },
    "homepage": "https://github.com/Tenemo/sealed-vote-server#readme",
    "scripts": {
        "start": "node dist/server.js",
        "prebuild": "npm run lint && npm run tsc && npm test && npm run cleanDist",
        "build": "cross-env NODE_ENV=production babel --extensions '.ts' src --out-dir dist",
        "build:skip": "npm run cleanDist && cross-env NODE_ENV=production babel --extensions '.ts' src --out-dir dist",
        "cleanDist": "rimraf ./dist && mkdir dist",
        "start:dev": "cross-env NODE_ENV=development tsx src/server.ts",
        "dev": "cross-env NODE_ENV=development nodemon",
        "docker:up": "docker compose up -d",
        "docker:destroy": "docker compose down -v",
        "docker:wipe": "npm run docker:destroy && npm run docker:up",
        "db:wipe": "docker cp src/sql/drop.sql sv-postgres:/drop.sql && docker cp src/sql/create.sql sv-postgres:/create.sql && docker exec -it sv-postgres psql -U postgres -d sv-db -f /drop.sql && docker exec -it sv-postgres psql -U postgres -d sv-db -f /create.sql",
        "db:full-wipe": "npm run docker:wipe && wait-on --delay 2500 tcp:127.0.0.1:5432 && docker cp src/sql/drop.sql sv-postgres:/drop.sql && docker cp src/sql/create.sql sv-postgres:/create.sql && docker exec sv-postgres psql -U postgres -d sv-db -f /drop.sql && docker exec sv-postgres psql -U postgres -d sv-db -f /create.sql && npm run dev",
        "deploy": "git push heroku master",
        "lint": "eslint . --ext js,ts",
        "lint:fix": "eslint . --ext js,ts --fix",
        "postinstall": "husky install",
        "tsc": "tsc",
        "test": "cross-env NODE_ENV=test vitest run",
        "test:watch": "vitest watch"
    },
    "engines": {
        "node": ">=13.3"
    },
    "type": "module",
    "dependencies": {
        "@fastify/postgres": "^5.2.2",
        "@nearform/sql": "^1.10.5",
        "@sinclair/typebox": "^0.32.20",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "env-schema": "^5.2.1",
        "fastify": "^4.26.2",
        "fluent-json-schema": "^4.2.1",
        "http-errors": "^2.0.0",
        "pino-pretty": "^11.0.0",
        "rimraf": "^5.0.5",
        "threshold-elgamal": "^0.1.32"
    },
    "devDependencies": {
        "@babel/cli": "^7.24.1",
        "@babel/core": "^7.24.4",
        "@babel/node": "^7.23.9",
        "@babel/preset-env": "^7.24.4",
        "@babel/preset-typescript": "^7.24.1",
        "@types/eslint": "^8.56.7",
        "@types/eslint-plugin-prettier": "^3.1.3",
        "@types/http-errors": "^2.0.4",
        "@types/node": "^20.12.6",
        "@types/npm": "^7.19.3",
        "@types/pg": "^8.11.5",
        "@types/prettier": "^2.7.3",
        "@typescript-eslint/eslint-plugin": "^7.6.0",
        "@typescript-eslint/parser": "^7.6.0",
        "babel-plugin-module-resolver": "^5.0.0",
        "core-js": "^3.36.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest": "^27.9.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-security": "^2.1.1",
        "eslint-plugin-sql": "2.5.0",
        "husky": "^9.0.11",
        "nodemon": "^3.1.0",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.7.2",
        "typescript": "^5.4.4",
        "vitest": "^1.4.0",
        "wait-on": "^7.2.0"
    }
}
